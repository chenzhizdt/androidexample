<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/btn_pmtool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pmtool"
        android:onClick="openPmtool" />

    <Button
        android:id="@+id/btn_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/compass"
        android:onClick="openCompass" />

    <Button
        android:id="@+id/btn_contactpicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/contactpicker"
        android:onClick="openContactPicker" />

    <Button
        android:id="@+id/btn_todolist"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/todolist" 
        android:onClick="openTodoList" />
    
    <Button
        android:id="@+id/btn_earthquake"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/earthquake" 
        android:onClick="openEarthquake" />
    
    <Button
        android:id="@+id/btn_download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/download" 
        android:onClick="openDownload" />
    
    <Button
        android:id="@+id/btn_lifecycle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lifecycle_test" 
        android:onClick="openLifeCycle" />
    
    <Button
        android:id="@+id/btn_touch_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/touch_event_test" 
        android:onClick="openTouchEvent" />
    
    <Button
        android:id="@+id/btn_slide_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/touch_event_test" 
        android:onClick="openSlideList" />

</LinearLayout>
