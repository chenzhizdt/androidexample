<?xml version="1.0" encoding="utf-8"?>
<org.instorm.example.slide.SlideMenuFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/slmf_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ListView
        android:id="@+id/lv_slide_menu"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginRight="50dp" >
    </ListView>

    <LinearLayout
        android:id="@+id/ll_move_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/white"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/username"
                android:textColor="@android:color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>
</org.instorm.example.slide.SlideMenuFrameLayout>